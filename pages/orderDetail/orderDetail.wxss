.title {
  width: 100%;
  background: white;
  display: flex;
  align-items: center;
  position: fixed;
  justify-content: space-around;
}

.titleSel {
  color:black;
  font-size: 13px;
  width: 25%;
  height: 10%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-left: 0.5px solid #cccccc;
  border-right: 0.5px solid #cccccc;
}

.titleUnsel {
  color: gray;
  font-size: 13px;
  width: 25%;
  height: 10%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-left: 0.5px solid #cccccc;
  border-right: 0.5px solid #cccccc;
}

.headerLineSel {
  background: #5f6fee;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.headerLineUnsel {
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.orderlist{
  display: flex;
  flex-direction: column;
  width: 100%;
  /* height: 100%; */
  align-items: center;
  padding-top: 40px;
}
